<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <div id="head-container">
    <h2 id="title">Articles</h2>
    <div class="header-container">
    <form action="/add" method="GET">
        <button type="submit" class="add-btn">Add Post</button>
      </form>
      <form action="/logout" method="GET">
        <button type="submit" class="logout-btn">Logout</button>
      </form>
      </div>
      </div>
<div id="body-container">
    <% if (posts.length === 0) { %>
      <p>No posts to display</p>
    <% } else { %>
      <ul>
        <% posts.forEach((post, index) => { %>
          <li>
            <a id="item" href="/post/<%= post.id %>"><%= post.title %></a>
            <div id="button-container">
            <form class="delete-form" action="/delete/<%= post.id %>" method="post">
              <button type="submit">Delete</button>
            </form>
            <form class="edit-form" action="/edit/<%= post.id %>" method="post">
              <button type="submit" id="edit-btn">Edit</button>
            </form>
          </div>
          </li>
        <% }); %>
      </ul>
    <% } %>
</div>
  </div>

  <%- include("footer") %>
</body>
</html>

